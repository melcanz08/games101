<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Web site created using basic web technologies" />
    <title>RPS</title>
    <link rel="stylesheet" href="/assets/css/css_file.css">
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
  </head>
  <body>

    <!-- TOP NAV BAR -->

    <nav class="navbar navbar-expand-sm navbar-dark bg-dark mb-4">
      <div class="container-fluid ">
        <a class="navbar-brand" href='/'>RPS</a>
        <a class="navbar-brand" href='/logout'>Log out</a>
      </div>
    </nav>

    <!-- MAIN GAME AREA -->

    <section class="" id="mainPage">
      <div class="d-flex align-items-center h-100 ">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6" >
              <h2 class="text-uppercase text-center mb-2">Rock Paper Scissor!</h2>
              <div class="m-2 card " style="border-radius: 15px;">
                <div class="card-body p-2 d-flex flex-wrap flex-column" id="firstContainer">

                  <div class=" flex-fill" style="border-radius: 15px;">
                    <div class=" p-2">
                      <div class="container">
                        <h3 class="text-center"  id="userName" data-key=<%= currentUsersId %> ><%= userName %></h3>
                        <div class="row">
                          <div class="col-xs-1 col-sm-4 col-md-4 col-lg-4 mx-auto text-center">
                            <img src="/assets/images/rock.png" class="rounded-circle mx-auto" style="height: 100px; width: 130px;" id="rpsImage" />
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="card flex-fill  border-0" >
                    <div class="card-body p-2">
                      <h1 class="text-center">vs</h1>
                    </div>
                  </div>

                  <div class="flex-fill" style="border-radius: 15px; ">
                    <div class="card-body p-2" id="enemyPlayer">
                      <p class="text-center">You can challenge someone on the list below or try playing with computer</p>
                      <div id="ipDiv"></div>
                    </div>
                  </div>

                </div>
              </div>

              <div class="card m-2" style="border-radius: 15px;">
                <div class="card-body">
                  <p class="text-center"><button type="button" class="btn btn-primary btn-sm my-2" id="bot">Computer</button></p>
                  
                  <h5 class="text-center" id="uidtag" data-uid=<%= userid %> >Players</h5>
                  <div id="playersList">
                    <% if (Object.keys(activeUser).length === 0) { %>
                      <h6 class="text-center text-black-50 my-2" id="otherPlayer" style="display: block;">
                        no players yet
                      </h6>
                      
                    <% } else { %>
                      <% for (let key in activeUser) { %>
                        <div class="d-flex justify-content-between my-2">
                          <h6 class="my-2"><%= activeUser[key].name %></h6>
                          <button type="button" class="btn btn-primary btn-sm chalBtn"  data-key=<%= key %> >Challenge</button>
                        </div>
                      <% } %>
                    <% } %>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FOOTER -->

    <div class="container">
      <footer class="d-flex flex-wrap justify-content-center align-items-center py-3 my-4 border-top">
       <span class="mb-3 text-muted">&copy; 2023 RPSgame Inc.</span>
      </footer>
    </div>

     <!-- JAVASCRIPTS -->
   
    <script src="/assets/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/assets/js/jsFile.js"></script>
  </body>
</html>

